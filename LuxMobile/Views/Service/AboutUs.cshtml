            {
                <h2 style="text-align: center" >Available Services</h2>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiceName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                        </tr>

                    </tbody>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        }
        else
        {
            <table class="table">
                <tbody>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ServiceName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @*<a asp-action="Create">
                                <input type="submit" value="Add" class="btn btn-primary" />
                            </a>*@
                        </th>
                    </tr>

                </tbody>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>

                                <!--<a asp-action="Edit" asp-route-id="@item.ServiceNo">Edit</a> |-->
                                @*<a asp-action="Details" asp-route-id="@item.ServiceNo">Details</a> |*@
                                <!--<a asp-action="Delete" asp-route-id="@item.ServiceNo" onclick='return confirm("Are you sure?");'>Delete</a>-->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</section>

